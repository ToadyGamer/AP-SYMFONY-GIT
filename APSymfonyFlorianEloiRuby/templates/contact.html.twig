{% extends 'base.html.twig' %}
{%form_theme form "bootstrap_4_layout.html.twig"%}

{% block title %}CONTACT{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Nous contacter : </h1>
    <br>
    <br>

    {{form_start(form)}}
    <h3>{{form_row(form.nomContact, {'attr' : {'placeholder': 'ex: Potier'}})}}</h3>
    <br>
    <h3>{{form_row(form.prenomContact, {'attr' : {'placeholder': 'ex: Julien'}})}}</h3>
    <br>
    <h3>{{form_row(form.mailContact, {'attr' : {'placeholder': 'ex: julien.potier@gmail.com'}})}}</h3>
    <br>
    <h3>{{form_row(form.messageContact, {'attr' : {'placeholder': 'ex: Je recherche plus d\'informations sur ...'}})}}</h3>
    <br>
    {{form_end(form)}}
</div>
{% endblock %}
